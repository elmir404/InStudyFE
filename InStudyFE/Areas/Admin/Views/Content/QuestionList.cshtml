<!--app-content open-->
<div class="main-content app-content mt-0">
    <div class="side-app">

        <!-- CONTAINER -->
        <div class="main-container container-fluid">

            <!-- PAGE-HEADER -->
            <div class="page-header">
                <h1 class="page-title">Data Table</h1>
                <div>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="javascript:void(0)">Tables</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Data Table</li>
                    </ol>
                </div>

            </div>


            <!-- Row -->
            <div class="row row-sm">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Todo List</h3>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <a class="btn btn-primary mb-4 data-table-btn" asp-area="Admin" asp-action="AddQuestion" asp-controller="Content">
                                    Add Question
                                </a>

                                @*<button id="button" class="btn btn-primary mb-4 data-table-btn">Add Task</button>*@
                                <table id="question-datatable" class="table table-bordered text-nowrap border-bottom">
                                    <thead>
                                        <tr>
                                            <th class="border-bottom-0">Question Title(Az)</th>
                                            <th class="border-bottom-0">Question Title(En) </th>
                                            <th class="border-bottom-0">Question Title(Ru)</th>
                                            <th class="border-bottom-0">Answer(Az)</th>
                                            <th class="border-bottom-0">Answer(En)</th>
                                            <th class="border-bottom-0">Answer(Ru)</th>
                                            <th class="border-bottom-0">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End Row -->
            <!-- Row -->


        </div>
        <!-- CONTAINER CLOSED -->

    </div>
</div>
