@model RegisterViewModel
<div class="main-content app-content mt-0">
    <div class="side-app">

        <!-- CONTAINER -->
        <div class="main-container container-fluid">

            <!-- PAGE-HEADER -->
            <div class="page-header">
                <h1 class="page-title">Add Program</h1>
                <div>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="javascript:void(0)">User</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Add User</li>
                    </ol>
                </div>
            </div>
            <!-- PAGE-HEADER END -->
            <!-- ROW-1 OPEN -->
            <div class="row">
                <div class="col-lg-12">
                    <form method="POST" class="card">
                        <div class="card-header">
                            <div class="card-title">Add User</div>
                        </div>
                        <div class="card-body">
                            <div asp-validation-summary="ModelOnly" style="font-style:normal !important" class="text-danger mb-2 "></div>
                            <div class="row mb-4">
                                <label class="col-md-3 form-label">Name :</label>
                                <div class="col-md-9">
                                    <input type="text" asp-for="@Model.Name" id="firstName" placeholder="Ad" required>
                                </div>
                            </div>
                            <div class="row mb-4">
                                <label class="col-md-3 form-label">Surname :</label>
                                <div class="col-md-9">
                                    <input type="text" asp-for="@Model.Surname" id="lastName" placeholder="Soyad" required>
                                </div>
                            </div>
                            <div class="row mb-4">
                                <label class="col-md-3 form-label">User Name :</label>
                                <div class="col-md-9">
                                    <input type="text"  asp-for="@Model.UserName" id="regUserName" placeholder="İstifadəçi adı" required>
                                </div>
                            </div>

                            <!-- Row -->
                            <div class="row">
                                <label class="col-md-3 form-label mb-4">Email :</label>
                                <div class="col-md-9 mb-4">
                                    <input type="text" asp-for="@Model.Email" id="regEmail" placeholder="Email" required>
                                </div>
                            </div>
                            <div class="row">
                                <label class="col-md-3 form-label mb-4">Password :</label>
                                <div class="col-md-9 mb-4">
                                    <input type="password" asp-for="@Model.Password" id="regPassword" class="password" placeholder="Parol" required>
                                </div>
                            </div> <div class="row">
                                <label class="col-md-3 form-label mb-4">Confirm Password :</label>
                                <div class="col-md-9 mb-4">
                                    <input type="password" asp-for="@Model.ConfirmPassword" class="password" id="confPassword" placeholder="Parol təkrarı" required>
                                </div>
                            </div>
                            <!--End Row-->
                            <!--Row-->
                            <!--End Row-->
                        </div>
                        <div class="card-footer">
                            <!--Row-->
                            <div class="row">
                                <div class="col-md-3"></div>
                                <div class="col-md-9">
                                    <button type="submit" class="btn btn-primary">Add User</button>
                                </div>
                            </div>
                            <!--End Row-->
                        </div>
                    </form>
                </div>
            </div>
            <!-- /ROW-1 CLOSED -->
        </div>
        <!-- CONTAINER CLOSED -->
    </div>
</div>      